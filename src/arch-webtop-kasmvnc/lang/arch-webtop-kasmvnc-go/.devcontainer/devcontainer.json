{
  "build": {
    "dockerfile": "./Dockerfile",
    "context": "."
  },
  "features": {
    "ghcr.io/bartventer/arch-devcontainer-features/common-utils:1": {
      "username": "abc",
      "additionalPackages": "base-devel",
      "installZsh": true,
      "installOhMyZsh": true,
      "configureZshAsDefaultShell": true
    },
    "ghcr.io/bartventer/arch-devcontainer-features/go:1": {}
  },
  "runArgs": [
    "--shm-size=1gb"
  ],
  "remoteUser": "abc",
  "remoteEnv": {
    "HOME": "/config"
  }
}
